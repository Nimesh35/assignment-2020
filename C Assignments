  22) Print the sum of only odd numbers between 1 and 10.
  
  #include<stdio.h>
#include<conio.h>


int main()
{
	int start, end, sum = 0;
	
	printf("enter star value\n");
	scanf("%d", &start);
	printf("enter end value\n");
	scanf("%d", &end);
	
	printf("\nsum of odd numbers from %d to %d is", start, end);
	
	while(start <= end)
	{
		if(start%2 !=0)
		{
			sum = sum + start;
		}
		start++;
	}
	printf("%d\n", sum);
	return 0;
}
