#include<conio.h>

int main()
{
	int marks[max]={20,30,40,50,60};
	
	int i;
	for(i=0;i<max;i++)
	{
		printf("marks %d\n",marks[i]);
	}
	
	int sum=0;
	float avg;
	for(i=0;i<max;i++)
	{
		som=sum+marks[i];
	}
	
	avg=sum/max;
	
	printf("average = %f\n",avg);
}
