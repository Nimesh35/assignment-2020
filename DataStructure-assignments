Q2)
#include<stdio.h>
#include<string.h>

struct student
 {
     int rollno;
     char name[30];
     
 };
 
int main()
{
    struct student *s1,s;
    s1=&s;
    
    s1->rollno=20;
    strcpy(s1->name,"Rahul");         

    printf("rollno :%d\n",s1->rollno);
    printf("name : %s\n",s1->name);
    
}
