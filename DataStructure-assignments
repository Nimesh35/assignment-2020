Q1)
#include<stdio.h>
#include<stdlib.h>

struct student
{
 char name[20];
 int rollno;
};
int main()
{
    struct student s1;
    strcpy(s1.name,"nimesh");
    s1.rollno=54;
    printf("name : %s,rollno : %d",s1.name,s1.rollno);
   
    
}
