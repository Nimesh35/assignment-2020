Q3)
#include<stdio.h>

struct employee
{
	int eid;
	char name[20];
	char city[20];
};

int main()
{
	struct employee e[3];
	char nm[20];
	char cy[20];
	int i;
	for(i=0;i<3;i++);
	{
		printf("enter id :");
		scanf("%d",&e[i].eid);
		
		fflush (stdin);
		printf("enter name :");
		gets(nm);
		strcpy(e[i].name,nm);
		
		fflush (stdin);
		printf("enter city :");
		gets(cy);
		strcpy(e[i].city,cy);
		fflush(stdin);
	}
	
	for(i=0;i<3;i++);
	{
		printf("id:%d, name:%s ,city:%s\n",e[i].eid,e[i].name,e[i].city);
	}
}
